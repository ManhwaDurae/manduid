extends ../../layouts/admin.pug
include ../../mixins/memberFormFields.pug

block container-inner
    h1.title 운영위원 명단
    h2.subtitle 운영위원 명단입니다.
    p #[strong 참고] : 여기서의 제명은 회원 제명이 아닌 운영위원직을 박탈하는 것을 의미합니다. 헷갈리지 마세요.
    if error
        .notification.is-danger= error
    .table_container
        table.table.is-hoverable.is-fullwidth
            thead
                th 이름
                th 학번
                th 직책
                th 제명/변경
            tbody
                if president
                    tr
                        td= president.member.name
                        td= president.member.studentId
                        td 회장
                        td 
                for i in executives
                    tr
                        td= i.member.name
                        td= i.member.studentId
                        td= i.executiveType.name
                        td
                            a(href="/admin/executives/fire/" + i.memberId)
                                button.button.is-small.is-danger 제명
                            a(href="/admin/executives/appoint/" + i.memberId)
                                button.button.is-small 직책 변경