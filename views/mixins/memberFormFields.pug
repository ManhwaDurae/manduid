mixin memberFormFields(_info, _readonly, minimal = false)
    - let info = _info || {}; //Object.assign({name: '', studentId: '', department: '', birthday: '', phoneNumber: ''}, _info);
    - if (!info.name) info.name =''; if(!info.studentId) info.studentId = ''; if(!info.birthday) info.birthday = ''; if(!info.phoneNumber) info.phoneNumber = '';
    - info.birthday = typeof info.birthday === 'string' ? info.birthday : `${info.birthday.getFullYear()}-${info.birthday.getMonth() + 1}-${info.birthday.getDate()}`;
    - let readonly = Boolean(_readonly)
    .field
        label.label 이름
        .control
            input.input(type="text", name="name", placeholder="예시: 김만두", value=info.name, required, readonly= readonly)
    .field
        label.label 학번
        .control
            input.input(type="number", name="studentId", placeholder="예시: 19871234", value=info.studentId, required, readonly= readonly)
    if !minimal
        .field
            label.label 학과
            .control
                input.input(type="text", name="department", placeholder="예시: 만화창작학과", value=info.department, required, readonly= readonly)
        .field
            label.label 생일
            .control
                input.input(type="date", name="birthday", value = info.birthday, required, readonly= readonly)
        .field
            label.label 전화번호
            .control
                input.input(type="tel", name="phoneNumber", placeholder="예시: 010-0000-0000", value=info.phoneNumber, pattern="[0-9]{2,4}-[0-9]{3,5}-[0-9]{3,5}", required, readonly= readonly)